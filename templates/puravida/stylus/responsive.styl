@media only screen and (min-width:  565px)
	h1
		font-size 2em
	h2 
		font-size 1.5em

@media only screen and (min-width:  1000px)
	.languajes
		margin-left 0
	#btn_nav
		display none
	.menu 
		display block !important
		float right
		margin-top 1em 
		position static

		ul
			background none
		li 
			display inline-block
			text-align left
	.banner
		.splash
			width 600px
			padding 0

	.section-video
		.info 
			width 50%
	footer
		.column-links
			display inline-block
	.column-contact
		width 350px

	.menu-footer
		display block

		li 
			display block