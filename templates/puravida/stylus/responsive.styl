		display none
	
	

@media only screen and (min-width:  1000px)
	header 
		background url('../img/header.jpg') no-repeat center center #FFF
		height 375px
	.skype-header
		top 145px
		left -20px
		
		
	.languajes
		margin-left 0
	#btn_nav
		display none
	.menu 
		display block !important
		margin-top 0em 
		position static
		background amarillo

		ul
			background none
			text-align center
		li 
			display inline-block
			text-align left
	.banner
		.splash
			width 600px
			padding 0

	.section-video
		.video 
			width 45%
		.info 
			width 50%
			float right
			text-align center
	footer
		.column-links
			display inline-block
	/*.column-contact
		width 350px*/

	.menu-footer
