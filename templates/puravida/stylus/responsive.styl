			float left
			text-align left
			margin-right 1em
			margin-top 1.5em
	
	

@media only screen and (min-width:  768px)
	.stream-player
		width 60%
	.stream-chat
		width 30%
	.blog-books
		.span3
			display inline-block
			width 280px
			margin .5em
			
		
	.item-page-books
				
