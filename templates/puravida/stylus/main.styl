
@import "nib"
@import "normalize.styl"
@import "icons.styl"

azul = #0168AA
azul_oscuro = #004977
rojo = #F1705A
celeste = #00ADEE
celeste2 = #90D6F1
verde = #CED786
gris = #5E636D
claro = #E9EDDB

body
	background url('../img/bg.png') repeat claro
	font-family 'Roboto Slab', serif
	font-size 16px
	line-height 25px
	
header 
	background azul
	height 75px
a 
	text-decoration	none
	color rojo
	&:hover
